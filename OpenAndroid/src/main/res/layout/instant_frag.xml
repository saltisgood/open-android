<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/new_primitive"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/new_primitive"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/new_object"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/new_object"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_below="@id/new_primitive"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/view_objs"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/view_objs"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_below="@id/new_object"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>